<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.eCommerce.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.eCommerce"
    xmlns:views="clr-namespace:Maui.eCommerce.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Maui.eCommerce">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryManagementView}"
        Route="InventoryManagement"
        />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShoppingCart}"
        Route="ShoppingCart"
        />
    <ShellContent
        Title="Add/Edit"
        ContentTemplate="{DataTemplate views:ProductDetails}"
        Route="Product"
        />

</Shell>
